<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:elevation="3dp"
        card_view:cardCornerRadius="1dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/image"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:clickable="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvGameName"
                android:layout_below="@+id/image"
                android:padding="5dp"
                android:text="Game Name"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Rs"
                android:layout_below="@+id/tvGameName"
                android:padding="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#0fafc1"
                android:id="@+id/rsSymbol"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvGamePrice"
                android:layout_toRightOf="@+id/rsSymbol"
                android:layout_below="@+id/tvGameName"
                android:padding="5dp"
                android:text="Game Price"
                android:textSize="20dp"
                android:textColor="#0fafc1"
                android:textStyle="bold"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:textAllCaps="false"
                android:id="@+id/btnAddCartShort"
                android:layout_below="@+id/tvGamePrice"
                android:background="#f6e324"
                android:textSize="20sp"
                android:textAlignment="gravity"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/black"
                android:drawableLeft="@drawable/cartsmall16"
                android:layout_marginBottom="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail View"
                android:textAllCaps="false"
                android:id="@+id/btnDetails"
                android:layout_below="@+id/btnAddCartShort"
                android:background="#00FFFFFF"
                android:textSize="14sp"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="5dp"/>
            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/btnWishList"
                android:background="@drawable/wishlisticon"
                android:layout_toRightOf="@+id/btnDetails"
                android:layout_below="@+id/btnAddCartShort"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>